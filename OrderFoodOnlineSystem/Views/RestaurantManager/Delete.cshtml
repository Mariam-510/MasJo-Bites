@model OrderFoodOnlineSystem.ViewModels.RestaurantManagerViewModels.DeleteRestaurantManagerViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Restaurant Manager";
}

<section class="register-restaurent-sec section-padding bg-light-theme">
    <div class="container-fluid padding-20 ps-4">
        <div class="row d-flex justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="col-lg-8">
                <div class="sidebar-tabs main-box padding-30 mb-md-40">
                    <div id="add-restaurent-tab" class="step-app">
                        <div class="row justify-content-center">
                            <div class="col-xl-8 col-lg-7 col-sm-7 d-flex justify-content-center">
                                <div class="step-content w-100">
                                    <div class="step-tab-panel active" id="steppanel1">
                                        <div class="general-sec">
                                            <form asp-action="Delete" asp-controller="RestaurantManager" method="post" style="min-height: 700px;">
                                                <div class="row">
                                                    <div class="col-12 mb-3 mt-5">
                                                        <h5 class="text-light-black fw-700 text-center">Delete Restaurant Manager</h5>
                                                    </div>
                                                    <div class="col-md-12 mb-3">
                                                        <div class="form-group">
                                                            <label class="text-light-black fw-700">Select Restaurant Manager</label>
                                                            <select asp-for="RestaurantManagerId" class="form-control form-control-submit">
                                                                <option value="">-- Select a Restaurant Manager --</option>
                                                                @if (Model.RestaurantManagers != null)
                                                                {
                                                                    @foreach (var manager in Model.RestaurantManagers)
                                                                    {
                                                                        <option value="@manager.Id">@manager.Name</option>
                                                                    }
                                                                }
                                                            </select>
                                                            <span asp-validation-for="RestaurantManagerId" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 mb-5 text-center">
                                                        <div asp-validation-summary="All" class="text-danger"></div>
                                                        <div class="form-group">
                                                            <button type="submit" class="btn-second btn-submit">Delete</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
