@model OrderFoodOnlineSystem.ViewModels.AddressViewModel.CreateAddressViewModel


@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<!-- Navigation -->
<section class="register-restaurent-sec section-padding bg-light-theme">
    <div class="container-fluid padding-15 ps-4">
        <!-- Changed to justify-content-start -->
        <div class="row">
            <div class="col-lg-9">
                <div class="sidebar-tabs main-box padding-20 mb-md-40">
                    <div id="add-restaurent-tab" class="step-app">
                        <div class="row">

                            <!-- Changed to justify-content-start -->
                            <div class="col-xl-4 col-lg-5 mb-md-40">


                                <ul class="step-steps steps-2">
                                    <li class="add-res-tab" id="stepbtn1">
                                        <a asp-action="Edit" asp-controller="Customer" class="add-res-tab">Account</a>
                                    </li>
                                    <li class="add-res-tab" id="stepbtn3">
                                        <a asp-action="GetAllCustomerOrders" asp-controller="Order" class="add-res-tab">Your Orders</a>
                                    </li>
                                    <li class="add-res-tab" id="stepbtn2">
                                        <a asp-action="GetAllFavourites" asp-controller="FavouriteRestaurant" class="add-res-tab">Favorite Restaurants</a>
                                    </li>

                                    <li class="add-res-tab active" id="stepbtn2">
                                        <a asp-action="Index" asp-controller="Address" class="add-res-tab">Saved Addresses</a>
                                    </li>

                                    <li class="add-res-tab" id="stepbtn2">
                                        <a asp-action="Index" asp-controller="Review" class="add-res-tab">Your Reviews</a>
                                    </li>

                                    <li class="add-res-tab" id="stepbtn2">
                                        <a asp-action="Delete" asp-controller="Customer" onclick="return confirm('Are you sure you want to delete this account?');" class="add-res-tab">Delete Account</a>
                                    </li>

                                </ul>

                            </div>


                            <div class="col-xl-8 col-lg-6 ">
                                <div class="step-content">
                                    <div class="step-tab-panel active" id="steppanel1">
                                        <div class="general-sec">

                                            <div class="col-12 mb-3">
                                                <h5 class="text-light-black fw-700">Add Address</h5>

                                            </div>

                                            <div class="container">

                                                <div class="d-flex flex-column align-items-center py-3" style="margin-top: -20px;">

                                                    <form asp-action="Create">
                                                        <div class="row">


                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label asp-for="City" class="text-light-black fw-700"></label>
                                                                    <input asp-for="City" class="form-control form-control-submit" placeholder="Type Your City" />
                                                                    <span asp-validation-for="City" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label asp-for="Street" class="text-light-black fw-700"></label>
                                                                    <input asp-for="Street" class="form-control form-control-submit" placeholder="Type Your Street" />
                                                                    <span asp-validation-for="Street" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label asp-for="BuildingNum" class="text-light-black fw-700"></label>
                                                                    <input asp-for="BuildingNum" class="form-control form-control-submit" placeholder="Type Your Building Number" />
                                                                    <span asp-validation-for="BuildingNum" class="text-danger"></span>

                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label asp-for="Apartment" class="text-light-black fw-700"></label>
                                                                    <input asp-for="Apartment" class="form-control form-control-submit" placeholder="Type Your Apartment" />
                                                                    <span asp-validation-for="Apartment" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label asp-for="Floor" class="text-light-black fw-700"></label>
                                                                    <input asp-for="Floor" class="form-control form-control-submit" placeholder="Type Your Floor" />
                                                                    <span asp-validation-for="Floor" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label asp-for="PhoneNum" class="text-light-black fw-700"></label>
                                                                    <input asp-for="PhoneNum" class="form-control form-control-submit" placeholder="Type Your Phone Number" />
                                                                    <span asp-validation-for="PhoneNum" class="text-danger"></span>
                                                                </div>
                                                            </div>

                                                        </div>
                                                        <div asp-validation-summary="All" class="text-danger"></div>
                                                        <div class="row">
                                                            <div class="col-md-12 mb-2">
                                                                <div class="form-group">
                                                                    <button type="submit" class="btn-second btn-submit ">Add Address</button>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </form>

                                                </div>
                                            </div>

                                        </div>
                                    </div>



                                </div>
                            </div>


                        </div>

                    </div>
                </div>
            </div>

            <!-- Side banner carousel content here -->
            <div class="col-lg-3  pe-5" style="min-height: 400px;">
                <section id="sidebannerCarousel" class="about-us-slider swiper-container p-relative" data-bs-ride="carousel">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide slide-item active">
                            <div class="large-product-box p-relative pb-0">
                                <img src="~/assets/img/sidebanner-1.jpg" class="img-fluid full-width" alt="image">
                                <div class="overlay padding-20">

                                    <div class="content-wrapper">
                                        <h3 class="text-custom-white">All New Restaurants</h3>
                                        <a href="#" class="btn-submit btn-second">Get Deals</a>
                                    </div>
                                </div>
                                <div class="overlay overlay-bg"></div>
                            </div>
                        </div>
                        <div class="swiper-slide slide-item">
                            <div class="large-product-box p-relative pb-0">
                                <img src="~/assets/img/sidebanner-2.jpg" class="img-fluid full-width" alt="image">
                                <div class="overlay padding-20">

                                    <div class="content-wrapper">
                                        <h3 class="text-custom-white">50% Discount on All New Restaurants</h3>
                                        <a href="#" class="btn-submit btn-second">Get Deals</a>
                                    </div>
                                </div>
                                <div class="overlay overlay-bg"></div>
                            </div>
                        </div>
                        <div class="swiper-slide slide-item">
                            <div class="large-product-box p-relative pb-0">
                                <img src="~/assets/img/sidebanner-3.jpg" class="img-fluid full-width" alt="image">
                                <div class="overlay padding-20">

                                    <div class="content-wrapper">
                                        <h3 class="text-custom-white">50% Discount on All New Restaurants</h3>
                                        <a href="#" class="btn-submit btn-second">Get Deals</a>
                                    </div>
                                </div>
                                <div class="overlay overlay-bg"></div>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#sidebannerCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#sidebannerCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </section>
            </div>

        </div>
    </div>
</section>
