@model IEnumerable<OrderFoodOnlineSystem.Models.Address>


@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<div class="main-sec"></div>
<!-- Navigation -->
<section class="register-restaurent-sec section-padding bg-light-theme">
    <div class="container-fluid padding-15 ps-4 ">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-9">
                <div class="sidebar-tabs main-box padding-20 mb-md-40">
                    <div id="add-restaurent-tab" class="step-app">
                        <div class="row">

                            <div class="container">
                                <div class="d-flex align-items-center justify-content-between py-3" style="gap: 20px;">
                                    <h2 class="padding-15 ps-3">Choose Addresses</h2>
                                    <a asp-action="Create" asp-route-viewName="IndexAddress"
                                    class="btn btn-outline-secondary d-flex align-items-center rounded-pill px-4 py-2 fw-bold pe-5 ">
                                        <span class="fs-5 me-2 ">➕</span> ADD ADDRESS
                                    </a>
                                </div>

                            </div>




                            <div class="col-xl-12 col-lg-6 ">
                                <div class="step-content">
                                    <div class="step-tab-panel active" id="steppanel1">
                                        <div class="general-sec">

                                            <div class="container">

                                                <div class="d-flex flex-column  py-3" style="margin-top: -20px;">

                                                    <!-- Address Card 1 -->
                                                    @foreach (var address in Model)
                                                    {
                                                        <a asp-action="Checkout" asp-controller="Cart" asp-route-addressId="@address.Id"
                                                        class="text-light-black fw-600" style="text-decoration: none;width: 90%; max-width: 1000px;">

                                                            <div class="card p-4 shadow-sm rounded-3 mb-4" style=" transition: transform 0.2s, box-shadow 0.2s;" onmouseover="this.style.transform='scale(1.02)'; this.style.boxShadow='0 4px 15px rgba(0,0,0,0.1)'; this.querySelector('.card-title').style.color='red';" onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 1px 3px rgba(0,0,0,0.05)'; this.querySelector('.card-title').style.color='';">

                                                                <!-- <h4 class="card-title">Apartment</h4> -->
                                                                <div class="card-text" style="font-weight: normal; font-size: 0.9rem;"><strong>Address:</strong></div>
                                                                <div class="card-text" style="font-weight: normal; font-size: 0.9rem;">@address.BuildingNum - @address.Street, @address.City</div>
                                                                <div class="card-text mb-1" style="font-weight: normal; font-size: 0.9rem;">Apartment: @address.Apartment - Floor: @address.Floor</div>
                                                                
                                                                <div class="card-text" style="font-weight: normal; font-size: 0.9rem;"><strong>Mobile Number:</strong> @address.PhoneNum</div>

                                                                <div class="d-flex justify-content-end">
                                                                    
                                                                    <a asp-action="Delete" asp-route-id="@address.Id" asp-route-viewName="IndexAddress"
                                                                       class="btn btn-outline-danger "
                                                                       onclick="return confirm('Are you sure you want to delete this address?');">
                                                                        Delete
                                                                    </a>

                                                                </div>
                                                            </div>

                                                        </a>
                                                    }



                                                </div>
                                            </div>

                                        </div>
                                    </div>



                                </div>
                            </div>

                            <div class="col-xl-2">
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
