@model IEnumerable<OrderFoodOnlineSystem.Models.Address>


@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

    <!-- Navigation -->
    <section class="register-restaurent-sec section-padding bg-light-theme">
        <div class="container-fluid padding-15 ps-4">
            <!-- Changed to justify-content-start -->
            <div class="row">
                <div class="col-lg-9">
                    <div class="sidebar-tabs main-box padding-20 mb-md-40">
                        <div id="add-restaurent-tab" class="step-app">
                            <div class="row">

                                <!-- Changed to justify-content-start -->
                                <div class="col-xl-4 col-lg-5 mb-md-40">


                                    <ul class="step-steps steps-2">
                                        <li class="add-res-tab" id="stepbtn1">
                                        <a asp-action="Edit" asp-controller="Customer" class="add-res-tab">Account</a>
                                    </li>
                                    <li class="add-res-tab" id="stepbtn3">
                                        <a asp-action="GetAllCustomerOrders" asp-controller="Order" class="add-res-tab">Your Orders</a>
                                    </li>
                                        <li class="add-res-tab" id="stepbtn2">
                                        <a asp-action="GetAllFavourites" asp-controller="FavouriteRestaurant" class="add-res-tab">Favorite Restaurants</a>
                                        </li>

                                    <li class="add-res-tab active" id="stepbtn2">
                                        <a asp-action="Index" asp-controller="Address" class="add-res-tab">Saved Addresses</a>
                                    </li>

                                    <li class="add-res-tab" id="stepbtn2">
                                        <a asp-action="Index" asp-controller="Review" class="add-res-tab">Your Reviews</a>
                                    </li>

                                    <li class="add-res-tab" id="stepbtn2">
                                        <a asp-action="Delete" asp-controller="Customer" onclick="return confirm('Are you sure you want to delete this account?');" class="add-res-tab">Delete Account</a>
                                    </li>

                                    </ul>

                                </div>


                            <div class="col-xl-8 col-lg-6 ">
                                <div class="step-content">
                                    <div class="step-tab-panel active" id="steppanel1">
                                        <div class="general-sec">
                                            
                                            <div class="d-flex align-items-center justify-content-between pb-4 ps-3 pe-3">
                                                <h5 class="text-light-black fw-700 mb-0 ">Saved Addresses</h5>
                                                <a asp-action="Create"
                                                   class="btn btn-outline-secondary d-flex align-items-center rounded-pill px-3 py-1 fw-bold">
                                                    <span class="fs-6 me-1">➕</span> ADD
                                                </a>

                                            </div>


                                            <div class="container">

                                                <div class="d-flex flex-column  py-3" style="margin-top: -20px;">

                                                    <!-- Address Card 1 -->
                                                    @foreach (var address in Model)
                                                    {
                                                        <a href="#" class="text-light-black fw-600" style="text-decoration: none;width: 90%; max-width: 1000px;">


                                                            <div class="card p-4 shadow-sm rounded-3 mb-4" style=" transition: transform 0.2s, box-shadow 0.2s;" onmouseover="this.style.transform='scale(1.02)'; this.style.boxShadow='0 4px 15px rgba(0,0,0,0.1)'; this.querySelector('.card-title').style.color='red';" onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 1px 3px rgba(0,0,0,0.05)'; this.querySelector('.card-title').style.color='';">

                                                                <div class="card-text" style="font-weight: normal; font-size: 0.9rem;"><strong>Address:</strong></div>
                                                                <div class="card-text" style="font-weight: normal; font-size: 0.9rem;">@address.BuildingNum - @address.Street, @address.City</div>
                                                                <div class="card-text mb-1" style="font-weight: normal; font-size: 0.9rem;">Apartment: @address.Apartment - Floor: @address.Floor</div>

                                                                <div class="card-text" style="font-weight: normal; font-size: 0.9rem;"><strong>Mobile Number:</strong> @address.PhoneNum</div>

                                                                <div class="d-flex ">
                                                                    <a asp-action="Delete" asp-route-id="@address.Id"
                                                                       class="btn btn-outline-danger "
                                                                       onclick="return confirm('Are you sure you want to delete this address?');">
                                                                        Delete
                                                                    </a>
                                                                </div>


                                                            </div>

                                                        </a>
                                                    }

                                                    


                                                   
                                               
                                                </div>
                                            </div>

                                        </div>
                                    </div>



                                </div>
                            </div>
                            
                            
                            </div>

                        </div>
                    </div>
                </div>

            <!-- Side banner carousel content here -->
            <partial name="_SliderPartial" />

        </div>
        </div>
    </section>
