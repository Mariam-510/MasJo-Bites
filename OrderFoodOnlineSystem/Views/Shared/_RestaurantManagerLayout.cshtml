<body>
    <!-- Navigation -->



    <div class="header">
        <header class="full-width  ">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 mainNavCol navbar navbar-expand-lg ">
                        <!-- logo -->
                        <div class="logo mainNavCol">
                            <a asp-action="GetAllRestaurantOrders" asp-controller="Order">
                                <img src="~/assets/img/logo.png" class="img-fluid" alt="Logo">
                            </a>
                        </div>
                        <div class="nav-buttons d-flex gap-3 ps-3">
                            
                            <a asp-action="GetAllRestaurantOrders" asp-controller="Order" class="btn btn-outline-danger fw-bold py-1 px-3 rounded-pill "
                               style="transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;"
                               onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0px 4px 15px rgba(0, 0, 0, 0.1)';"
                               onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='none';">Home</a>

                            <a asp-action="Index" asp-controller="MenuItem" class="btn btn-outline-danger fw-bold py-1 px-3 rounded-pill "
                               style="transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;"
                               onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0px 4px 15px rgba(0, 0, 0, 0.1)';"
                               onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='none';">Menu</a>

                            <a asp-action="GetAllCategories" asp-controller="RestaurantCategory" class="btn btn-outline-danger fw-bold py-1 px-3 rounded-pill "
                               style="transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;"
                               onmouseover="this.style.transform='scale(1.1)'; this.style.boxShadow='0px 4px 15px rgba(0, 0, 0, 0.1)';"
                               onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='none';">Categories</a>


                           
                        </div>

                        <!-- logo -->
                        <div class="main-search mainNavCol">
                            <form class="main-search search-form full-width">
                                <div class="row">
                                </div>
                            </form>
                        </div>

                        <div class="right-side fw-700 mainNavCol">
                            <div class="gem-points">
                            </div>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <div class=" p-relative right-side fw-700 mainNavCol me-4"
                                     style="display: flex; gap: 10px; align-items: center; justify-content: center;">
                                    <a class="text-light-green fs-6" asp-controller="Account" asp-action="Login">
                                        Sign
                                        in
                                    </a>
                                    <a class="text-light-green fs-6" asp-controller="Account" asp-action="Register">
                                        Sign
                                        up
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="user-details p-relative">

                                    <a href="#" class="text-light-white fw-500">
                                        <img src="~/assets/img/icons/account-3.png" class="rounded-circle" alt="userimg"> <span>
                                            Hi,
                                            @User.FindFirst("FName")?.Value
                                        </span>
                                    </a>
                                    <div class="user-dropdown">
                                        <ul>
     
                                            <li>
                                                <a asp-action="Edit" asp-controller="RestaurantManager">
                                                    <div class="icon">
                                                        <i class="flaticon-user"></i>
                                                    </div> <span class="details">Account</span>
                                                </a>
                                            </li>

                                        </ul>
                                        <div class="user-footer">
                                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Sign Out</a>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                        <!-- user cart -->
                    </div>
                </div>

            </div>


        </header>
    </div>


    @RenderBody()

    <footer class="bg-light-theme bg-black w-100 fixed-bottom">
        <div class="footer-contact bg-black text-white text-center fs-6 py-4">
            © 2025 MasJo Bites. All rights reserved.
        </div>
    </footer>




    <!-- footer -->
    <!-- Place all Scripts Here -->
    <!-- jQuery -->
    <script src="~/assets/js/jquery.min.js"></script>
    <!-- Popper -->
    <script src="~/assets/js/popper.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/assets/js/bootstrap.min.js"></script>
    <!-- Range Slider -->
    <script src="~/assets/js/ion.rangeSlider.min.js"></script>
    <!-- Swiper Slider -->
    <script src="~/assets/js/swiper.min.js"></script>
    <!-- Nice Select -->
    <script src="~/assets/js/jquery.nice-select.min.js"></script>
    <!-- magnific popup -->
    <script src="~/assets/js/jquery.magnific-popup.min.js"></script>
    <!-- Maps -->
    @* <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDnd9JwZvXty-1gHZihMoFhJtCXmHfeRQg"></script> *@
    <!-- sticky sidebar -->
    <script src="~/assets/js/sticksy.js"></script>
    <!-- Munch Box Js -->
    <script src="~/assets/js/munchbox.js"></script>
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <!-- /Place all Scripts Here -->
    @await RenderSectionAsync("Scripts", required: false)

</body>


