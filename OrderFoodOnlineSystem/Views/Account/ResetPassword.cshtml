@model OrderFoodOnlineSystem.ViewModels.AccountViewModels.ResetPasswordViewModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}



<form asp-action="ResetPassword" class="py-10 " style="min-height: 300px; ">
    <div class="row ">
        <div class="col-12 mb-3">
            <h1 class="text-light-black fw-700 mb-3 mt-5 fs-1">Reset Password</h1>
        </div>
        <div class="col-md-9 mb-2">
            <div class="form-group">

                <label asp-for="Email" class="text-light-black fw-700 fs-5"></label>
                <input asp-for="Email" class="form-control form-control-submit" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>

            <div class="form-group position-relative">
                <label asp-for="Password" class="text-light-black fw-700 fs-5"></label>
                <div class="position-relative">
                    <input asp-for="Password" id="password-field1" class="form-control form-control-submit" placeholder="Password">
                    <i class="fa fa-fw fa-eye position-absolute top-50 end-0 translate-middle-y me-4 toggle-password" data-name="#password-field1" style="cursor: pointer;"></i>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>

            <div class="form-group position-relative">
                <label asp-for="ConfirmPassword" class="text-light-black fw-700 fs-5"></label>

                <div class="position-relative">
                    <input asp-for="ConfirmPassword" id="password-field2" class="form-control form-control-submit " placeholder="Confirm Password">
                    <i class="fa fa-fw fa-eye position-absolute top-50 end-0 translate-middle-y me-3 toggle-password" data-name="#password-field2" style="cursor: pointer;"></i>
                </div>

                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-md-12 mb-5">
            <span class="form-group">
                <button type="submit" class="btn-second btn-submit ">Submit</button>
            </span>
        </div>

    </div>

</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
