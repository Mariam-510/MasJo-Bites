@model OrderFoodOnlineSystem.ViewModels.AccountViewModels.RegisterCustomerViewModel
@{
    Layout = "~/Views/Shared/_AccountSignLayout.cshtml";
}

<div class="inner-wrapper">
    <div class="container-fluid no-padding">
        <div class="row no-gutters overflow-auto">
            <div class="col-md-6">
                <div class="main-banner">
                    <a asp-action="Index" asp-controller="Home">
                    <img src="~/assets/img/banner/banner-1.jpg" class="img-fluid full-width main-img" alt="banner">
                    <div class="overlay-2 main-padding">
                            <img src="~/assets/img/fianl logo.jpg" class="img-fluid" alt="logo" style="max-width:15vw">
                        </div>
                    <img src="~/assets/img/banner/burger.png" class="footer-img" alt="footer-img">
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="section-2 user-page main-padding">
                    <div class="login-sec">
                        <div class="login-box">
                            <form asp-action="Register">
                                <h4 class="text-light-black fw-600">Create your account</h4>
                                <div class="row">
                                    <div class="col-lg-6 col-md-12 col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="FirstName" class="text-light-white fs-14"></label>
                                            <input asp-for="FirstName" class="form-control form-control-submit" placeholder="First Name">
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-12 col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="LastName" class="text-light-white fs-14"></label>
                                            <input asp-for="LastName" class="form-control form-control-submit" placeholder="Last Name">
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="Email" class="text-light-white fs-14"></label>
                                            <input asp-for="Email" class="form-control form-control-submit" placeholder="Email">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Password" class="text-light-white fs-14"></label>
                                            <input asp-for="Password" id="password-field1" class="form-control form-control-submit" placeholder="Password">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                            <div data-name="#password-field1" class="fa fa-fw fa-eye field-icon toggle-password"></div>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="ConfirmPassword" class="text-light-white fs-14"></label>
                                            <input asp-for="ConfirmPassword" id="password-field2" class="form-control form-control-submit" placeholder="Confirm Password">
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            <div data-name="#password-field2" class="fa fa-fw fa-eye field-icon toggle-password"></div>
                                        </div>

                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <button type="submit" class="btn-second btn-submit full-width">Create your account</button>
                                        </div>
                                        <div class="form-group text-center">
                                            <span>or</span>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="form-group">
                                <form asp-action="ExternalLogin">
                                    <input type="hidden" name="provider" value="Google" />
                                    <button type="submit" class="btn-second btn-google full-width">
                                        <img src="~/assets/img/google-logo.png" alt="btn logo"> Continue with Google
                                    </button>
                                </form>
                            </div>
                            <div class="form-group text-center">
                                <p class="text-light-black mb-0">
                                    Have an account? <a asp-action="Login">Sign in</a>
                                </p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
