@model OrderFoodOnlineSystem.ViewModels.AccountViewModels.EmailFormViewModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}



<form asp-action="ForgotPassword" class="py-10 " style="min-height: 300px; ">
    <div class="row ">
        <div class="col-12 mb-2">
            <h1 class="text-light-black fw-700 mb-3 mt-5 fs-1">Reset Password</h1>
        </div>
        <div class="col-md-9 mb-2">
            <div class="form-group">
   
                <label asp-for="Email" class="text-light-black fw-700 fs-5"></label>
                <input asp-for="Email" class="form-control form-control-submit" placeholder="Enter Your Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-md-12 mb-5">
            <span class="form-group">
                <button type="submit" class="btn-second btn-submit ">Submit</button>
            </span>
        </div>

    </div>

</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
