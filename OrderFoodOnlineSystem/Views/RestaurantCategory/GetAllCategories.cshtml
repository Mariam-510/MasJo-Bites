@model IEnumerable<OrderFoodOnlineSystem.Models.Category>

@{
    Layout = "~/Views/Shared/_RestaurantManagerLayout.cshtml";
}


<section class="section-padding d-flex justify-content-center align-items-center mt-5">
    <div class="container" style="max-width: 800px;">

        <a asp-action="AddCategory" asp-controller="RestaurantCategory" class="btn btn-danger p-1 px-2 w-35 mb-3">Add Category</a>

        <div class="border border-danger rounded p-2">
            <!-- Header -->
            <div class="d-flex border-bottom border-danger p-2">
                <div style="width: 10%;" class="text-danger fw-600 text-center fs-6 ml-3">#</div>
                <div style="width: 32%;"></div> <!-- Spacer -->
                <div style="width: 33%;" class="text-danger fw-600 fs-6 ml-2">Name</div>
                <div style="width: 30%;" class="text-danger fw-600 text-center fs-6">Action</div>
            </div>

            @{
                int index = 1;
            }
            @foreach (var item in Model)
            {
                <div class="d-flex align-items-center border-bottom border-danger p-3">
                    <div style="width: 10%;" class="text-center fs-6 ml-2">@index</div>
                    <div style="width: 32%;"></div> <!-- Spacer -->
                    <div style="width: 33%;" class="fs-6 ml-2">@item.Name</div>
                    <div style="width: 30%;" class="text-center">
                        <a asp-action="Delete" asp-route-categoryId="@item.Id"
                           class="btn btn-danger p-1 px-2 w-35"
                           onclick="return confirm('Are you sure you want to delete this Item?');">
                            Delete
                        </a>
                    </div>
                </div>
                index++;
            }
        </div>
    </div>
</section>




